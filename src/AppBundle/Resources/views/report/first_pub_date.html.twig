{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>Bad First Publication Date Titles</h1>
    {% if titles|length > 0 %}
        Displaying {{ titles|length }} titles of {{ titles.getTotalItemCount }} total.
    {% endif %}
{% endblock %}

{% block body %}

    {% if titles|length > 0 %}
        <div class="navigation">
            {{ knp_pagination_render(titles) }}
        </div>

        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Pub Date</th>
                    <th>First Pub Date</th>
                </tr>
            </thead>
            <tbody>
                {% for title in titles %}
                    <tr>
                        <td>
                            <a href="{{ path('title_show', { 'id': title.id }) }}">
                                {{ title.id }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('title_show', { 'id': title.id }) }}">
                                {{ title.title }}
                            </a>
                        </td>
                        <td>{{ title.pubdate }}</td>
                        <td>{{ title.dateOfFirstPublication }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(titles) }}
        </div>
    {% endif %}

{% endblock %}
