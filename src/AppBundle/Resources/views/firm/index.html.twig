{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Firm Search</h1>
{% endblock %} 

{% block body %}

    {{ form_start(search_form, {'attr': { 'class': 'search'}}) }}    
    {{ form_row(search_form.name) }}    
    <div id="controls" class="collapse">
        {{ form_rest(search_form) }}
    </div>
    <div class="form-group">
        <div class="col-sm-2"></div>

        <div class="col-sm-10">
            <input type="submit" value="Search" class="btn btn-primary" />            
            <a class="btn btn-primary" role="button" data-toggle="collapse" href="#controls" aria-expanded="false" aria-controls="collapseExample">Options</a>
            <a class="btn btn-default" href="{{ path('firm_search') }}">Reset</a>
            <a class="btn btn-default" href="{{ path('firm_index') }}">Cancel</a>
        </div>
    </div>
    {{ form_end(search_form) }}

    {% if firms|length > 0 %}
        {{ include('AppBundle:firm:table.html.twig') }}

        <div class="navigation">
            {{ knp_pagination_render(firms) }}
        </div>
    {% endif %}
{% endblock %}
