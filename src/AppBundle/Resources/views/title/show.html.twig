{% extends 'base.html.twig' %}

{% block htmlhead %}
    <link rel="meta" type="application/rdf+xml" href="{{ path('title_show', {'id': title.id, '_format': 'rdf'}) }}"/>
{% endblock %}

{% block pageheader %}
    <div class="container">
        <h1>{{ title.title }}</h1>
    </div>
{% endblock %}

{% block body %}
    {% if is_granted('ROLE_CONTENT_ADMIN') %}
    <div class="container">
        <div class="btn-toolbar">
            <div class="btn-group pull-right">
                <a href="{{ path('title_new') }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-plus'></span> Add new Record
                </a>
                <a href="{{ path('title_edit', { 'id': title.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit Record
                </a>
                <a href="{{ path('title_delete', { 'id': title.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Title?">
                    <span class='glyphicon glyphicon-remove'></span> Delete Record
                </a>
            </div>
        </div>
    </div>
    {% endif %}

    <div class="container">
        <div class="row">

            <div class="col-sm-6">
                <table class="table table-bordered table-condensed table-hover table-striped">
                    <tbody>
                         <tr>
                            <th data-toggle="popover" data-container="body" data-content="WPHP database ID of the title" data-trigger="hover" data-placement="bottom" >Id</th>
                            <td>{{ title.id }}</td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Title of the book" data-trigger="hover" data-placement="bottom" >Title</th>
                            <td>{{ title.title }}</td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Names of all women who have contributed to the work and their role in the work’s production" data-trigger="hover" data-placement="bottom" >Contributors</th>
                            <td>
                                {% for tr in title.titleRoles %}
                                    {% set person = tr.person %}
                                    <a href="{{ path('person_show', {'id': person.id}) }}">{{ person.lastName }}, {{ person.firstName }}</a> ({{ tr.role.name }})
                                        {%- if not loop.last %}; {% endif %}
                                {% endfor %}
                            </td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Author attribution from the title page or the end of the preface" data-trigger="hover" data-placement="bottom" >Signed author</th>
                            <td>{{ title.signedAuthor }}</td>
                        </tr>
                         <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Any false author name" data-trigger="hover" data-placement="bottom" >Pseudonym</th>
                            <td>{{ title.pseudonym }}</td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Names of all printers, publishers, and booksellers listed in the imprint and their role in the work’s production" data-trigger="hover" data-placement="bottom" >Firms</th>
                            <td>
                                {% for tfr in title.titleFirmRoles %}
                                    {% set firm = tfr.firm %}
                                    <a href="{{ path('firm_show', {'id': firm.id}) }}">{{ firm.name }}</a> ({{ tfr.firmrole }})
                                    {%- if not loop.last %}; {% endif %}
                                {% endfor %}
                            </td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Indicates if the title was published by the author" data-trigger="hover" data-placement="bottom" >Self published</th>
                            <td>{% if title.selfpublished %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Number of volumes of the edition, using arabic numerals" data-trigger="hover" data-placement="bottom" >Volumes</th>
                            <td>{{ title.volumes }}</td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Number of pages of each volume" data-trigger="hover" data-placement="bottom" >Pagination</th>
                            <td>{{ title.pagination }}</td>
                        </tr>
                       <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Date (year) as it appears on the imprint" data-trigger="hover" data-placement="bottom" >Date</th>
                            <td>{{ title.pubdate }}</td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Edition as it appears on the title page" data-trigger="hover" data-placement="bottom" >Edition</th>
                            <td>{{ title.edition }} {{ title.editionNumber }}</td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Date (year) that the work was first published" data-trigger="hover" data-placement="bottom" >Date of first publication</th>
                            <td>{{ title.dateOfFirstPublication }}</td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Information about printers, publishers, booksellers as shown on the title page" data-trigger="hover" data-placement="bottom" >Imprint</th>
                            <td>{{ title.imprint }}</td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Geotagged location as indicated by the imprint" data-trigger="hover" data-placement="bottom" >Location of printing</th>
                            <td>
                                {% if title.locationOfPrinting %}
                                    <a href="{{ path('geonames_show', {'id': title.locationOfPrinting.geonameid}) }}">
                                        {{ title.locationOfPrinting.name }} {{ title.locationOfPrinting.country }}
                                    </a>
                                </td>
                            {% endif %}
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="The way that sheets have been folded and gathered into pages" data-trigger="hover" data-placement="bottom" >Format</th>
                            <td>
                                {% if title.format %}
                                    <a href="{{ path('format_show', {'id': title.format.id}) }}">
                                        {{ title.format.name }} ({{ title.format.abbrevOne }})
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Length measured in cm" data-trigger="hover" data-placement="bottom" >Length (cm)</th>
                            <td>{{ title.sizeL }}</td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Width measured in cm" data-trigger="hover" data-placement="bottom" >Width (cm)</th>
                            <td>{{ title.sizeW }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="col-sm-6">
                <table class="table table-bordered table-condensed table-hover table-striped">
                    <tbody>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Portion of the price of the work in pounds" data-trigger="hover" data-placement="bottom" >Price (pound)</th>
                            <td>{{ title.pricePound }}</td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Portion of the price of the work in shillings" data-trigger="hover" data-placement="bottom" >Price (shilling)</th>
                            <td>{{ title.priceShilling }}</td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Portion of the price of the work in pence" data-trigger="hover" data-placement="bottom" >Price (pence)</th>
                            <td>{{ title.pricePence }}</td>
                        </tr>
                        <tr>
                            <th data-toggle="popover" data-trigger="hover" data-placement="bottom" >Total price (in pence)</th>
                            <td>
                                {% if title.totalPrice > 0 %}
                                    {{ title.totalPrice }}
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Category that the work falls into" data-trigger="hover" data-placement="bottom" >Genre</th>
                            <td>
                                {% if title.genre %}
                                    <a href="{{ path('genre_show', {'id': title.genre.id}) }}">
                                        {{ title.genre.name }}
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Sources consulted to populate the entry fields" data-trigger="hover" data-placement="bottom" >Sources</th>
                            <td>
                                {% include "AppBundle:title:partials/source-link.html.twig"
                                    with {'source': title.source, 'sourceId': title.sourceId} %}
                                {% include "AppBundle:title:partials/source-link.html.twig"
                                    with {'source': title.source2, 'sourceId': title.source2Id} %}
                                {% include "AppBundle:title:partials/source-link.html.twig"
                                    with {'source': title.source3, 'sourceId': title.source3Id} %}
                            </td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Call numbers for location in various libraries" data-trigger="hover" data-placement="bottom" >Shelf marks</th>
                            <td>
                                {% for mark in title.shelfmark|split(';') %}
                                    {{ mark }}<br/>
                                {% endfor %}
                            </td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Any other important information, including links to sources" data-trigger="hover" data-placement="bottom" >Notes</th>
                            <td>{{ title.notes }}</td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Indicates that a physical copy of the text has been consulted" data-trigger="hover" data-placement="bottom" >Hand-verified</th>
                            <td>{% if title.checked %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Indicates that either two sources have been consulted or the text has been hand-checked" data-trigger="hover" data-placement="bottom" >Attempted Verification</th>
                            <td>{% if title.finalcheck %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        <tr>
                            <th data-toggle="popover"  data-container="body" data-content="Indicates that either two sources have been consulted or the text has been hand-checked" data-trigger="hover" data-placement="bottom" >Verified</th>
                            <td>{% if title.finalattempt %}Yes{% else %}No{% endif %}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <div class="container">
        <h3>Bibliographic Entry</h3>
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#mla">MLA</a></li>
            <li><a data-toggle="tab" href="#apa">APA</a></li>
            <li><a data-toggle="tab" href="#chicago">Chicago/Turabian</a></li>
            <li><a data-toggle="tab" href="#bibtex">BibTex</a></li>
        </ul>

        <div class="tab-content">
            <div id="mla" class="tab-pane fade in active">
                <div class="well">
                    <p>{% include "AppBundle:title:mla.html.twig" with {'title': title} %}</p>
                </div>
            </div>
            <div id="apa" class="tab-pane fade">
                <div class="well">
                    <p>{% include "AppBundle:title:apa.html.twig" with {'title': title} %}</p>
                </div>
            </div>
            <div id="chicago" class="tab-pane fade">
                <div class="well">
                    <p>{% include "AppBundle:title:chicago.html.twig" with {'title': title} %}</p>
                </div>
            </div>
            <div id="bibtex" class="tab-pane fade">
                <div class="well">
                    <pre>{% include "AppBundle:title:bibtex.html.twig" with {'title': title} %}</pre>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        {% include 'NinesFeedbackBundle:comment:comment-interface.html.twig' with { 'entity': title } %}
    </div>
{% endblock %}
