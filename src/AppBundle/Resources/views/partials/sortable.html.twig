{% spaceless %}
    {% if field is iterable %}
        {% set fieldQ = field|join('+') %}
    {% else %}
        {% set fieldQ = field %}
    {% endif %}
    {% if pagination.isSorted(fieldQ) %}
        {% set class="sorted " ~ pagination.getDirection %}
    {% else %}
        {% set class="" %}
    {% endif %}
    <th class="{{ class }}">
        {{ knp_pagination_sortable(pagination, header, field) }}
    </th>
{% endspaceless %}
