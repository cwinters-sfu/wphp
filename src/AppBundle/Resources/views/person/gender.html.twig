{% spaceless %}
    {% if person.gender == constant('AppBundle\\Entity\\Person::FEMALE') %}
        Female
    {% elseif person.gender == constant('AppBundle\\Entity\\Person::MALE') %}
        Male
    {% elseif person.gender == constant('AppBundle\\Entity\\Person::UNKNOWN')%}
        Unknown
    {% else %}
        Unknown ({{ person.gender }})
    {% endif %}
{% endspaceless %}
